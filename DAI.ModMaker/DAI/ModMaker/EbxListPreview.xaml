<Window x:Class="DAI.ModMaker.EbxListPreview" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="EbxListPreview" Height="300" Width="300" Background="#FFF0F0F0" xmlns:modmaker="clr-namespace:DAI.ModMaker;assembly=DAI.ModMaker">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="227*" />
            <ColumnDefinition Width="365*" />
        </Grid.ColumnDefinitions>
        <GridSplitter ResizeDirection="Columns" Width="3" Height="Auto" VerticalAlignment="Stretch" Background="#FFF0F0F0" />
        <ListBox Name="EbxListBox" Grid.Column="0" Margin="10,10,2.966,10" SelectionChanged="EbxListBox_SelectionChanged">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListBox>
        <TextBox Name="EbxNameText" Grid.Column="1" Margin="0,10,10,0" Height="23" VerticalAlignment="Top" VerticalContentAlignment="Center" IsReadOnly="True" />
        <TextBox Name="EbxXmlText" Grid.Column="1" Margin="0.034,38,10,10" />
    </Grid>
</Window>