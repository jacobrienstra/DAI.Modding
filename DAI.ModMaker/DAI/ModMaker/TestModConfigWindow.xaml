<Window x:Class="DAI.ModMaker.TestModConfigWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Mod Configuration" Height="300" Width="500" Background="#FFF0F0F0" xmlns:modmaker="clr-namespace:DAI.ModMaker;assembly=DAI.ModMaker">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="227*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="25*" />
            </Grid.ColumnDefinitions>
            <GridSplitter ResizeDirection="Columns" Grid.Column="1" Width="2" Height="Auto" VerticalAlignment="Stretch" Grid.RowSpan="2" Padding="3,0"/>
            <Border BorderThickness="1" BorderBrush="#FFABADB3" Margin="10" Grid.Column="0" Background="#FFE9E9E9">
                <StackPanel Name="LabelsStackPanel" Margin="10" />
            </Border>
            <Border BorderThickness="1" BorderBrush="#FFABADB3" Margin="10" Grid.Column="2" Background="#FFE9E9E9">
                <StackPanel Name="ControlsStackPanel" Margin="10" />
            </Border>
        </Grid>
        <Button Name="SaveButton" Content="Save" HorizontalAlignment="Right" Margin="10" Grid.Row="1" Click="SaveButton_Click" />
    </Grid>
</Window>